<div class="container padding-ver-40 lg:padding-ver-100">
  <div class="mb-50 lg:mb-100">
    <h2 class="h1 fw-600 t-transf--uc t-align--center mb-20 lg:mb-15">
      {{ section.settings.title }}
    </h2>
    <p class="c-grey2 t-align--center">
      {{ section.settings.description }}
    </p>
  </div>
  {%- form 'contact', id: 'ContactForm' -%}
    <div class="d-grid grid-layout6 gap-40 lg:cl-gap-19 mb-40 lg:mb-50">
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">title</label>
          <div class="p-relative">
            <select class="padding-18-20 border-grey6 cus-select width-100">
              <option value="">Miss</option>
              <option value="">Mr</option>
            </select>
            <svg
              class="p-absolute select-arrow__position"
              xmlns="http://www.w3.org/2000/svg"
              width="12"
              height="7"
              viewBox="0 0 12 7"
              fill="none">
              <path
                d="M11 1L6.30612 6L1 1"
                stroke="#171719"
                stroke-linecap="round"
                stroke-linejoin="round" />
            </svg>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc required">sur name</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="text"
              required>
            <span class="content-custome c-grey3">Insert your name</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc required">first name</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="text"
              required>
            <span class="content-custome c-grey3">Insert your surname</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc required">email</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="text"
              required>
            <span class="content-custome c-grey3">Insert your Email</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">phone</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="text"
              required>
            <span class="content-custome c-grey3">Insert your phone</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">city</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="text"
              required>
            <span class="content-custome c-grey3">Insert your city</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">company</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="text"
              required>
            <span class="content-custome c-grey3">Insert your company here</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">province</label>
          <div class="p-relative">
            <select class="padding-18-20 border-grey6 cus-select width-100">
              <option value="">Agriento</option>
              <option value="">Agriento</option>
            </select>
            <svg
              class="p-absolute select-arrow__position"
              xmlns="http://www.w3.org/2000/svg"
              width="12"
              height="7"
              viewBox="0 0 12 7"
              fill="none">
              <path
                d="M11 1L6.30612 6L1 1"
                stroke="#171719"
                stroke-linecap="round"
                stroke-linejoin="round" />
            </svg>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">vat number</label>
          <div class="p-relative input-box">
            <input
              class="width-100 padding-18-20 border-grey6 cus-input"
              type="number"
              required>
            <span class="content-custome c-grey3">Insert your VAT number</span>
          </div>
        </div>
      </div>
      <div class="grid-item">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">request</label>
          <div class="p-relative">
            <select class="padding-18-20 border-grey6 cus-select width-100">
              <option value="">Dealer</option>
              <option value="">Dealer</option>
            </select>
            <svg
              class="p-absolute select-arrow__position"
              xmlns="http://www.w3.org/2000/svg"
              width="12"
              height="7"
              viewBox="0 0 12 7"
              fill="none">
              <path
                d="M11 1L6.30612 6L1 1"
                stroke="#171719"
                stroke-linecap="round"
                stroke-linejoin="round" />
            </svg>
          </div>
        </div>
      </div>
      <div class="grid-item grid-item__message">
        <div class="d-flex flex-cl gap-11">
          <label class="h4 fw-600 t-transf--uc">message</label>
          <div class="p-relative input-box">
            <textarea
              class="width-100 h5 padding-18-20 border-grey6 cus-input"
              id="message"
              name="message"
              rows="8"
              style="resize: none;"
              required></textarea>
            <span class="content-custome c-grey3">Write your message here</span>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-cl gap-20 mb-40 lg:mb-50">
      <div class="d-grid grid-layout9 gap-20 lg:a-item--center">
        <input
          id="exclusive-offers"
          class="wh-24 border-grey6 cus-select"
          type="checkbox">
        <label for="exclusive-offers">I agree to receive communications regarding exclusive offers, services and news</label>
      </div>
      <div class="d-grid grid-layout9 gap-20 lg:a-item--center">
        <input
          id="privacy-policy"
          class="wh-24 border-grey6 cus-select"
          type="checkbox">
        <label for="privacy-policy">After reading the privacy policy, I consent to the processing of my personal data.</label>
      </div>
    </div>
    <button class="btn btn-primary btn-border--none t-transf--uc padding-12-32">SEND INQUIRY</button>
  {%- endform -%}
</div>

{% schema %}
  {
    "name": "Become a dealer",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "Title",
        "default": "become a dealer"
      }, {
        "type": "inline_richtext",
        "id": "description",
        "label": "Description",
        "default": "Exclusive jewels with a contemporary design, handcrafted finished and able to arouse emotions"
      }
    ]
  }
{% endschema %}