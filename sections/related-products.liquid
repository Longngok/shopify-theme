<div class="container-scroll container">
  <h2 class="h-2xl h-md t-align--center mb-25 lg-mb-45">
    {{ section.settings.title | upcase }}
  </h2>
  <div class="d-grid xs-4--column gap-15 lg-gap-20 p-block--13 lg-padding-0 scroll">
    {% for product in collections.all.products limit: 4 %}
      {% render 'list-product', product: product %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Related Products",
    "tag": "section",
    "class": "Featured-products",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "Enter your title",
        "default": "Related product"
      }
    ],
    "presets": [
      {
        "name": "Related Products"
      }
    ]
  }
{% endschema %}