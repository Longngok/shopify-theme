{% if section.settings.background != blank %}
  {%- style -%}
    .bg-img2 {
      background-image: url('{{ section.settings.background | image_url }}');
    }
  {%- endstyle -%}
{% endif %}

<div class="bg-img2 bg-style" style="background-color:black;">
  <div class="container padding-70 lg:padding-176 t-align--center">
    <h2 class="h1 fw-600 c-secondary t-transf--uc mb-15">
      {{ section.settings.title | upcase }}
    </h2>
    <p class="c-grey2 mb-40">
      {{ section.settings.description }}
    </p>
    <a class="btn btn-secondary btn-border--none h5 c-primary t-decor--none padding-12-32" href="{{ section.settings.link }}">
      {{ section.settings.btn_label | upcase }}
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Image Banner",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background",
        "label": "Insert your background image"
      },
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "inline_richtext",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididu"
      },
      {
        "type": "text",
        "id": "btn_label",
        "label": "Write your button",
        "default": "Back to shopping now"
      }, {
        "type": "url",
        "id": "link",
        "label": "Insert your link"
      }
    ]
  }
{% endschema %}