<div class="container">
  <div class="d-flex flex-cl gap-20 lg:gap-0 lg:d-flex-row lg:a-item--center lg:j-content--sb mb-40 lg:mb-60">
    {% assign product_count = products | size %}
    <p class="c-grey2">There are {{ product_count }} products</p>
    <div class="d-flex j-content--sb lg:gap-60">
      <form class="d-flex a-item--center">
        <label class="h5 fs-16 t-transf--uc colon">sort by</label>
        <div class="d-flex a-item--center gap-22">
          <select class="h5 fs-16 cus-select t-transf--uc fw-600 btn-border--none">
            <option value="">highest price</option>
            <option value="">lowest price</option>
          </select>
          {% render 'icon-arrow-down' %}
        </form>
      </div>
      <button class="btn btn-link btn-border--none h4 t-transf--uc fw-600">filter</button>
    </div>
  </div>
  <div>
    <div class="d-grid xs-2--column lg-4--column r-gap-40 lg:r-gap-60 gap-15 lg:gap-18 p-block--13 lg:padding-0">
      {% for product in collection.products %}
        {% assign main_img = product.featured_image %}
        <div class="grid__item">
          <div class="d-flex flex-cl a-item--center">
            <div class="p-relative square width-100">
              <a class="d-iblock cube__content" href="{{ product.url }}">
                {% render 'image', main_img: main_img %}
              </a>
              <button class="btn btn-link btn-border--none max-wh-20 p-absolute top-20 right-20">
                {% render 'icon-heart' %}
              </button>
            </div>
            <div class="card-body d-flex flex-cl a-item--center gap-10 mt-20">
              <h3 class="h5 fs-16">
                {{ product.title | upcase }}
              </h3>
              {% if product.price != 0 %}
                <p class="h5 c-grey1 mb-10">
                  {{ product.price | money }}
                </p>
              {% else %}
                <p class="t-align--center mb-10">
                  Vui lòng liên hệ
                </p>
              {% endif %}
              {% render 'add-to-cart' %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "collection",
    "tag": "section"
  }
{% endschema %}