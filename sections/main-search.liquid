{% style %}
  .search__container {
    width: 60%;
  }

  .search__box {
    padding: 1.6rem;
  }

  .btn-search--position {
    right: 1rem;
    top: 1.5rem;
  }
  .rs__container {
    height: 15rem;
    padding: 1rem;
  }

  .page__tag {
    padding: 0.4rem 1.2rem;
    top: 1.5rem;
    right: 1.5rem;
    border-radius: 9.9rem;
  }

  @media(min-width: 992px) {
    .rs__container {
      height: 28rem;
      padding: 1.5rem
    }

    .page__tag {
      top: 2rem;
      right: 2rem;
    }
  }
{% endstyle %}


<div class="container padding-ver-40 lg:padding-ver-100">
  <h2 class="h2 fw-600 mb-15 t-align--center">Search</h2>
  <form class="search d-flex j-content--center mb-30" action="/search">
    <div class="p-relative search__container">
      <input
        class="p-relative width-100 search__box"
        type="text"
        placeholder="Search"
        name="q"
        value="{{ search.terms | escape }}" />
      <button class="btn btn-link btn-border--none p-absolute btn-search--position" type="submit">
        {% render 'icon-search' %}
      </button>
    </div>
  </form>
  {% if search.results.size > 0 %}
    <div class="d-grid grid-layout8 r-gap-40 lg:r-gap-60 gap-15 lg:gap-18 padding-13 lg:padding-0">
      {% for results in search.results %}
        {% if results.object_type == 'product' %}
          <div class="grid__item">
            <div class="card d-flex flex-cl a-item--center">
              <div class="p-relative product-img">
                <a class="d-iblock card-img p-relative wh-100" href="{{ results.url }}">
                  <img
                    class="wh-100 bg-style"
                    src="{{ results.featured_image | image_url }}"
                    alt="">
                </a>
                <button class="btn btn-link btn-border--none max-wh-1 p-absolute top-20 right-20">
                  {% render 'icon-heart' %}
                </button>
              </div>
              <div class="card-body d-flex flex-cl a-item--center gap-10 mt-20">
                <h3 class="fs-14-16 t-transf--uc fw-600">
                  {{ results.title }}
                </h3>
                {% if results.price != 0 %}
                  <p class="h5 c-grey1 mb-10">
                    {{ results.price | money }}
                  </p>
                {% else %}
                  <p class="t-align--center">Vui lòng liên hệ để biết chi tiết giá sản phẩm</p>
                {% endif %}
              </div>
            </div>
          </div>
        {% elsif results.object_type == 'page' %}
          <div class="rs__container d-grid p-item--center width-100 bc-grey3 p-relative">
            <a class="c-primary t-decor--none" href="{{ results.url }}">
              {{ results.title | upcase }}
            </a>
            <span class="page__tag p-absolute bc-secondary">page</span>
          </div>
        {% endif %}
      {% endfor %}
    {% elsif search.results.size == 0 %}
      <h3 class="t-align--center">
        No result.
      </h3>
    {% endif %}
  </div>
</div>