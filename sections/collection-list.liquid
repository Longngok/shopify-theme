<div class="container">
  <h2 class="h-2xl h-md t-align--center mb-25 lg-mb-45">
    {{ section.settings.heading | upcase }}
  </h2>
  <div class="d-grid xs-2--column lg-4--column gap-15 lg-gap-20">
    {% for collection in collections -%}
      {% render 'list-collection', collection: collection %}
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "All Collections",
    "tag": "section",
    "class": "shop-by",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "All collections"
      }
    ],
    "presets": [
      {
        "name": "All Collections"
      }
    ]
  }
{% endschema %}