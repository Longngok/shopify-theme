{% style %}
  {% if section.settings.background != blank %}{% endif %}
  .richtext__padding {
    padding: {{ section.settings.sm_padding | append: 'rem' }}
    var(--ctph);
  }
  .sm-richtext__font-size {
    font-size: {{ section.settings.sm_font-size | append: 'rem' }}
  }

  .sm-richtext__title-mb {
    margin-bottom: {{ section.settings.sm_title_mb | append: 'rem' }}
  }

  .richtex__content-mb {
    margin-bottom: {{ section.settings.content_mb | append: 'rem' }}
  }
  @media(min-width: 769px) {
    .lg-richtext__title-mb {
      margin-bottom: {{ section.settings.lg_title_mb | append: 'rem'  }}
    }
    .lg-richtext__padding {
      padding: {{ section.settings.lg_padding | append: 'rem' }}
      var(--ctph);
    }
    .lg-richtext__font-size {
      font-size: {{ section.settings.lg_font-size | append: 'rem'  }}
    }
  }
{% endstyle %}


<div class="bg-img bg-style" style="background-color: black;">
  <div class="container richtext__padding lg-richtext__padding {{ section.settings.content_position }}">
    <h2 class="sm-richtext__font-size lg-richtext__font-size sm-richtext__title-mb lg-richtext__title-mb c-secondary">
      {{ section.settings.title | upcase }}
    </h2>
    {% if section.settings.content_position == 't-align--start' %}
      {% assign desMaxwidth = 'max-width--327' %}
    {% endif %}
    <p class="c-grey2 richtex__content-mb {{ desMaxwidth }}">
      {{ section.settings.description }}
    </p>
    <div>
      {% if section.settings.btn_showhide == false %}
        {% if section.settings.btn_alignment == "btn1" %}
          <a class="t-decor--none a-item--center" href="{{ section.settings.link }}">
            <span class="h5 c-secondary mr-10">
              {{ section.settings.btn_label | upcase }}
            </span>
            {% render 'icon-transfer' %}
          </a>
        {% elsif section.settings.btn_alignment == "btn2" %}
          {% if section.settings.btn_label != blank %}
            {% assign btnTitle = section.settings.btn_label %}
            {% assign btnLink = section.settings.link %}
            {% render 'btn-secondary', btnTitle: btnTitle, btnLink: btnLink %}
          {% endif %}
        {% endif %}
      {% elsif section.settings.btn_showhide == true %}
        <a class="d-none"></a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Rich Text",
    "tag": "section",
    "class": "rich-text",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "Heading",
        "default": "NEW COLLECTION 2021"
      },
      {
        "type": "range",
        "id": "sm_font-size",
        "min": 2,
        "max": 3,
        "step": 0.1,
        "unit": "rem",
        "label": "Mobile font size",
        "default": 2
      },
      {
        "type": "range",
        "id": "lg_font-size",
        "min": 2,
        "max": 3,
        "step": 0.1,
        "unit": "rem",
        "label": "Desktop font size",
        "default": 2
      },

      {
        "type": "range",
        "id": "lg_title_mb",
        "min": 1.5,
        "max": 3,
        "step": 0.1,
        "unit": "rem",
        "label": "Desktop Title margin bottom",
        "default": 2
      }, {
        "type": "range",
        "id": "sm_title_mb",
        "min": 1.5,
        "max": 3,
        "step": 0.1,
        "unit": "rem",
        "label": "Mobile Title margin bottom",
        "default": 2
      }, {
        "type": "inline_richtext",
        "id": "description",
        "label": "Paragraph",
        "default": "Text somethings here"
      }, {
        "type": "range",
        "id": "content_mb",
        "min": 0,
        "max": 4.1,
        "step": 0.1,
        "unit": "rem",
        "label": "Content margin bottom",
        "default": 3
      }, {
        "type": "select",
        "id": "content_position",
        "label": "Content position",
        "options": [
          {
            "value": "t-align--start",
            "label": "Left"
          }, {
            "value": "t-align--center",
            "label": "Middle"
          }, {
            "value": "t-align--end",
            "label": "Right"
          }
        ]
      }, {
        "type": "image_picker",
        "id": "background",
        "label": "Background image"
      }, {
        "type": "range",
        "id": "lg_padding",
        "min": 10,
        "max": 20.5,
        "step": 0.5,
        "unit": "rem",
        "label": "Desktop padding",
        "default": 18
      }, {
        "type": "range",
        "id": "sm_padding",
        "min": 5,
        "max": 10,
        "step": 0.1,
        "unit": "rem",
        "label": "Mobile padding",
        "default": 6
      }, {
        "type": "checkbox",
        "id": "btn_showhide",
        "label": "Hide your button",
        "default": false
      }, {
        "type": "select",
        "id": "btn_alignment",
        "label": "Button style",
        "options": [
          {
            "value": "btn1",
            "label": "Button 1"
          }, {
            "value": "btn2",
            "label": "Button 2"
          }
        ],
        "default": "btn1"
      }, {
        "type": "text",
        "id": "btn_label",
        "label": "Button label",
        "default": "see more"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "Rich Text"
      }
    ]
  }
{% endschema %}