<div class="p-relative oflow--hidden height-100">
  <div class="banner-images d-flex">
    {% for block in section.blocks %}
      <div class="width-100 p-relative">
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'banner-img bg-style' }}
        {%- else -%}
          {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg banner-img bg-style' }}
        {% endif %}
        <div class="container">
          <div class="p-absolute bottom-15 lg:bottom-50">
            <h1 class="h1 fs-18 c-secondary mb-15 lg:mb-20">
              {{ block.settings.heading | upcase }}
            </h1>
            {% if block.settings.button_label != blank %}
              {% assign btnTitle = block.settings.button_label %}
              {% assign btnLink = block.settings.link %}
              {% render 'btn-secondary', btnTitle: btnTitle, btnLink: btnLink %}
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <button class="btn btn-link btn-border--none btn-prev max-wh-2 p-absolute top-50pc left-15 lg:left-50 btn-prev">
    {% render 'icon-prev' %}
  </button>
  <button class="btn btn-link btn-border--none btn-next max-wh-2 p-absolute top-50pc right-15 lg:right-50 ">
    {% render 'icon-next' %}
  </button>
</div>
{% schema %}
  {
    "name": "Slide Show",
    "tag": "section",
    "class": "banner",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name": "Image slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "inline_richtext",
            "id": "heading",
            "default": "Title baner",
            "label": "Heading"
          }, {
            "type": "text",
            "id": "button_label",
            "default": "Shop now",
            "label": "Button"
          }, {
            "type": "url",
            "id": "link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slide Show",
        "blocks": [
          {
            "type": "image"
          }, {
            "type": "image"
          }
        ]
      }
    ]

  }
{% endschema %}