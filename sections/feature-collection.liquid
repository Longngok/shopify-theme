<div class="container">
  <h2 class="h1 t-align--center mb-25 lg:mb-45">
    {{ section.settings.heading | upcase }}
  </h2>
  <div class="d-grid xs-2--column lg-4--column gap-15 lg:gap-20">
    {% if section.settings.collection != blank %}
      {% for collection in section.settings.collection limit: 4 -%}
        <div class="grid__item width-100 rectangle__narrow">
          <div class="card p-relative wh-100">
            {{ collection.featured_image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'wh-100 bg-style cube__content' }}
            <div class="card-body d-grid p-item--center p-absolute left-0 right-0 bottom-10 lg:bottom-30">
              {{ collection.title | upcase | link_to: collection.url, class: 'btn btn-secondary btn-border--none p-block--13 max-width-125 width-100 t-decor--none t-align--center' }}
            </div>
          </div>
        </div>
      {%- endfor %}
    {%- else -%}
      {% for i in (1..4) %}
        <div class="grid__item width-100">
          <div class="card p-relative rectangle__narrow">
            {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg cube__content wh-100' }}
            <div class="card-body d-grid p-item--center p-absolute left-0 right-0 bottom-10 lg:bottom-30">
              <a class="btn btn-secondary btn-border--none p-block--13 max-width-125 width-100 t-decor--none t-align--center t-transf--uc" href="">
                Your title
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Feature Collection",
    "tag": "section",
    "class": "shop-by",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Shop by catgory"
      }, {
        "type": "collection_list",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Feature Collections"
      }
    ]
  }
{% endschema %}