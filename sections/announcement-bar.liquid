<div class="d-grid grid-layout1 bc-primary padding-13-15 lg:padding-13-50">
  <div class="grid__item lg:t-align--center">
    <span class="h5 c-secondary fw-400 t-transf--uc">
      {{ section.settings.text-announcement }}
    </span>
  </div>
  <div class="grid__item j-content--end a-item--center d-flex gap-8">
    <select class="h5 fw-400 cus-select c-secondary btn-link btn-border--none header-select truncate-text">
      {% for country_option in all_country_option_tags %}
        <option
          class=""
          value="{{ country_option }}"
          {% if country_option == 'English' %}selected{% endif %}>{{ country_option | translatey }}</option>
      {% endfor %}
    </select>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="10"
      height="10"
      viewBox="0 0 10 10"
      fill="none">
      <path
        d="M9 4L5.2449 8L1 4"
        stroke="white"
        stroke-linecap="round"
        stroke-linejoin="round" />
    </svg>
  </div>
</div>


{% schema %}
  {
    "name": "Announcement bar",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "text-announcement",
        "label": "Enter your banner",
        "default": "Free shipping in italy"
      }
    ]

  }
{% endschema %}