{% style %}
  .select-remove option:first-child {
    display: none
  }
  @media(min-width : 992px) {
    .column--1 {
      grid-column: 1 / 2;
      grid-row: 1;
      justify-content: start;
    }

    .column--3 {
      grid-column: 3 / 4;
    }
  }
{% endstyle %}

<div class="d-grid grid-layout1 gap-15 bc-primary padding-13-15 lg:padding-13-50">
  <div class="grid__item lg:t-align--center">
    <span class="h5 c-secondary">
      {{ section.settings.text_announcement | upcase }}
    </span>
  </div>
  {% if section.settings.hide != true %}
    <div class="grid__item j-content--end d-flex a-item--center gap-8 {{ section.settings.select_position }}">
      <select class="h5 fw-400 cus-select c-secondary btn-link btn-border--none header-select truncate-text select-remove" id="countrySelect">
        {{ all_country_option_tags }}
      </select>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="10"
        height="10"
        viewBox="0 0 10 10"
        fill="none">
        <path
          d="M9 4L5.2449 8L1 4"
          stroke="white"
          stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </div>
  {% endif %}
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    var selectElement = document.getElementById("countrySelect");
    selectElement.value = "Vietnam";
  });
</script>


{% schema %}
  {
    "name": "Announcement bar",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "text_announcement",
        "label": "Text",
        "default": "Free shipping in italy"
      }, {
        "type": "select",
        "id": "select_position",
        "label": "Language Select Position",
        "options": [
          {
            "value": "column--3",
            "label": "Right"
          }, {
            "value": "column--1",
            "label": "Left"
          }
        ]
      }, {
        "type": "checkbox",
        "id": "hide",
        "label": "Hide Language Select",
        "default": false
      }
    ]

  }
{% endschema %}