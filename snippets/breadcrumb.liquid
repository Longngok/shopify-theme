<ul class="d-flex mb-40 lg-mb-60 l-style--none">
  <li class="l-style--none mr-15 ">
    <a class="p t-transf--uc circle-icon t-decor--none c-grey3" href="{{ routes.root_url }}">Home</a>
  </li>
  {% if collection.title != blank %}
    <span class="d-flex a-item--center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="5"
        height="6"
        viewBox="0 0 5 6"
        fill="none">
        <circle
          cx="2.5"
          cy="3"
          r="2.5"
          fill="#9EA0A8">
      </svg>
    </span>
    <li class="p-inline--15">
      <a class="p t-transf--uc circle-icon t-decor--none c-grey3" href="">{{ collection.title }}</a>
    </li>
  {% endif %}
  <span class="d-flex a-item--center">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="5"
      height="6"
      viewBox="0 0 5 6"
      fill="none">
      <circle
        cx="2.5"
        cy="3"
        r="2.5"
        fill="#9EA0A8" />
    </svg>
  </span>
  <li class="p-inline--15">
    <a class="p t-transf--uc circle-icon t-decor--none c-primary" href="">{{ product.title }}</a>
  </li>
</ul>